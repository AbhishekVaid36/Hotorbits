<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/brown">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#FFFFFF">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/uploadimage" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:background="@color/brown">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF">

                        <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/prl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/rlheader1"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txtwebsiute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h4" />

                            </RelativeLayout>


                            <View
                                android:id="@+id/view1"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rlheader1"
                                android:background="@color/brown" />

                            <RelativeLayout
                                android:id="@+id/rlheader2"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/view1"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txt3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h3" />

                            </RelativeLayout>


                            <View
                                android:id="@+id/view2"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rlheader2"
                                android:background="@color/brown" />

                            <RelativeLayout
                                android:id="@+id/rlheader3"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/view2"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txtemail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h2" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view3"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rlheader3"
                                android:background="@color/brown" />

                            <RelativeLayout
                                android:id="@+id/rlheader4"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/view3"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h1" />

                            </RelativeLayout>


                        </android.support.percent.PercentRelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl1"
                android:background="#cccc" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view">

                <RelativeLayout
                    android:id="@+id/rlbtn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/buttonbacground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="CHECK"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:layout_toLeftOf="@+id/rlbtn"
                    android:background="@drawable/edittext_background">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:textColorHint="@color/blue"
                        app:hintTextAppearance="@style/TextLabelselected">

                        <EditText
                            android:id="@+id/edt_fname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter Page Name"
                            android:inputType="text"
                            android:padding="10dp"
                            android:paddingLeft="5dp"
                            android:textColor="#000000"
                            android:textColorHint="#ccc"
                            android:textSize="16dp" />
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/vieww"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl2"
                android:background="#cccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vieww"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/brown">

                    <Spinner
                        android:id="@+id/simpleSpinner1"
                        style="@style/SpinnerwithNoArrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="1dp"
                        android:dropDownVerticalOffset="1dp"
                        android:spinnerMode="dropdown" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
