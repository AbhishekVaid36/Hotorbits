<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/brown">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/uploadimage"
                        app:civ_border_color="@color/blue"
                        app:civ_border_width="2dp" />
                    <!--  app:civ_shadow="true"
                      app:civ_shadow_color="#8BC34A"
                      app:civ_shadow_radius="10"-->

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/rlpic"
                    android:background="@color/brown">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF">

                        <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/prl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/rlheader1"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txtwebsiute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h4" />

                            </RelativeLayout>


                            <View
                                android:id="@+id/view1"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rlheader1"
                                android:background="@color/brown" />

                            <RelativeLayout
                                android:id="@+id/rlheader2"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/view1"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txt3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h3" />

                            </RelativeLayout>


                            <View
                                android:id="@+id/view2"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rlheader2"
                                android:background="@color/brown" />

                            <RelativeLayout
                                android:id="@+id/rlheader3"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/view2"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txtemail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h2" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view3"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rlheader3"
                                android:background="@color/brown" />

                            <RelativeLayout
                                android:id="@+id/rlheader4"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/view3"
                                app:layout_widthPercent="25%">

                                <ImageView
                                    android:id="@+id/txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@mipmap/h1" />

                            </RelativeLayout>


                        </android.support.percent.PercentRelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl1"
                android:background="#cccc" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order No."
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1211212"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

            <View
                android:id="@+id/vieww"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl2"
                android:background="#cccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vieww"
                android:layout_margin="10dp">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:divider="#ffffff"
                    android:dividerHeight="20dp"
                    android:padding="10dp" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
